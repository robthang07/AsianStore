@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <h1 style="text-align:center">@ViewData["Title"]</h1>
    <div class="divCheck">
        <div>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h3 style="text-align:center">Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                        <label>First name</label>
                        <input asp-for="Input.FirstName" class="form-control" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Last name</label>
                        <input asp-for="Input.LastName" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Phone number</label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-5 mb-3">
                        <label>Post Address</label>
                        <input asp-for="Input.PostAddress" class="form-control" />
                        <span asp-validation-for="Input.PostAddress" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>City</label>
                        <input asp-for="Input.PostPlace" class="form-control" />
                        <span asp-validation-for="Input.PostPlace" class="text-danger"></span>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label>Zip</label>
                        <input asp-for="Input.PostNumber" class="form-control" />
                        <span asp-validation-for="Input.PostNumber" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn customGreen">Register</button>
            </form>
        </div>
    </div>
</div>


</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
