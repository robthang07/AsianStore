<div id="productsView" v-cloak>
    <div id="wrapper">
        <div class="sideBar">
            <strong>Search for items</strong>
            <input type="text" class="searchBar" placeholder="Search.." />
            <hr />
           <h6>Price</h6> 
            <br>
            <br>
            <h6>Types</h6>
            <div v-for="type in types">
                <input type="checkbox" :value="type.id" v-model="checkedTypes" v-on:change="getCheckedProducts()" />
                <label>{{type.name}}</label>
            </div>
            <br>
            <br>
            <h6>Origin</h6>
        </div>
        <div class="row productsRow">
            <div class="column" v-for="product in showProducts">
                <div class="card">
                    <a :href="'/products/details/'+product.id">
                        <img :alt="product.name" class="contain" :src="product.filePath" height="300" style="width: 100%;" />
                    </a>
                    <h3>{{product.name}}</h3>
                    <p class="price">{{product.price}}</p>
                    <a :href="'/products/details/'+product.id">
                        <button class="customGreen">See more</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
