@model AsianShop.Models.Product

<div id="clientView" v-cloak>
    <h1>@Html.DisplayFor(model => model.Name)</h1>
                <hr/>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name):
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Price):
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Price) kr/@Html.DisplayFor(model => model.Unit)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Type.Name):
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Type.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.From):
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.From)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.About):
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.About)
                    </dd>
                </dl>
                <hr/>
                <p id="warning"></p>
                <h3>Add to cart</h3>
                <p id="amountMessage" style="display:none;color:red;"></p>
                <select class="cart-quantity-input" name="selectQuantity" id="selectQuantity"></select>
                <span style="margin-left:-25px;" id="unit">
                    @Html.DisplayFor(model => model.Unit)
                </span>
                <br><br>
                <input id="productAmount" type="hidden" value="@Model.Amount">
                <input id="name" type="hidden" value="@Model.Name">
                <input id="price" type="hidden" value="@Model.Price">
                <input id="filePath" type="hidden" value="@Model.FilePath">
                <button type="button" class="btn btn-lg btn-success customGreen" id="addCart" value="@Model.Id"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart-plus-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM4 14a1 1 0 1 1 2 0 1 1 0 0 1-2 0zm7 0a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM9 5.5a.5.5 0 0 0-1 0V7H6.5a.5.5 0 0 0 0 1H8v1.5a.5.5 0 0 0 1 0V8h1.5a.5.5 0 0 0 0-1H9V5.5z"/>
                </svg> Add to cart
                </button>
                
</div>
