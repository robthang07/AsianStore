<div id="orders" style="display:none">
    <div class="text-center">
        <h1 class="display-4">Orders</h1>
    </div>
    <div class="divOnTableLayout">
        <table class="table" border="1">
            <thead>
                <tr class="table-succes">
                    <th>Id</th>
                    <th>Customer's name</th>
                    <th>Discount</th>
                    <th>Total price</th>
                    <th>Order lines ids</th>
                    <th>Order date</th>
                    <th>Last pickup date</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(order, index) in orders">
                    <td>{{order.id}}</td>
                    <td>{{order.customer.lastName}}, {{order.customer.firstName}}</td>
                    <td>{{order.discount}}</td>
                    <td>{{order.totalPrice}}</td>
                    <td><button v-on:click="openOrderLines(index)">Show order</button></td>
                    <td>{{order.orderDate}}</td>
                     <td>{{order.lastPickUpDate}}</td>
                    <td class="Remove">
                        <button class="btn btn-danger" v-on:click="deleteOrder(order.id,index)">Delete</button>
                    </td>
                    <td>
                        <button class="btn btn-primary" >Edit</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div id="orderLinesModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog " role="document">
            <div class="modal-content">
                <h2 style="text-align:center">Items</h2>
                <div class="divOnTableLayout">
                    <table class="table" border="1">
                        <thead>
                        <tr class="table-succes">
                            <th>Id</th>
                            <th>Product name</th>
                            <th>Quantity</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr class="table-succes" v-for="oLine in order.orderLines">
                            <td>{{oLine.id}}</td>
                            <td>{{oLine.product.name}}</td>
                            <td>{{oLine.amount}}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div id="editCustomerModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="divOnTableLayout">
                    <table class="table" border="1">
                        <thead>
                            <tr class="table-succes">
                                <th>Id</th>
                                <th>First name</th>
                                <th>Last name</th>
                                <th>Email</th>
                                <th>Phone number</th>
                                <th>Post number</th>
                                <th>Post place</th>
                                <th>Post address</th>
                                <th>Delivery post number</th>
                                <th>Delivery post place</th>
                                <th>Delivery post address</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="table-succes">
                                <td id="customerId">{{customer.id}}</td>
                                <td id="customerFirstName" contenteditable="true">{{customer.firstName}}</td>
                                <td id="customerLastName" contenteditable="true">{{customer.lastName}}</td>
                                <td id="customerEmail" contenteditable="true">{{customer.email}}</td>
                                <td id="customerPhoneNumber" contenteditable="true">{{customer.phoneNumber}}</td>
                                <td id="customerPostNumber" contenteditable="true">{{customer.postNumber}}</td>
                                <td id="customerPostPlace" contenteditable="true">{{customer.postPlace}}</td>
                                <td id="customerPostAddress" contenteditable="true">{{customer.postAddress}}</td>
                                <td id="customerDPostNumber" contenteditable="true">{{customer.deliveryPostNumber}}</td>
                                <td id="customerDPostPlace" contenteditable="true">{{customer.deliveryPostPlace}}</td>
                                <td id="customerDPostAddress" contenteditable="true">{{ customer.deliveryPostAddress}}</td>
                            </tr>
                        </tbody>
                    </table>
                    <button class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>