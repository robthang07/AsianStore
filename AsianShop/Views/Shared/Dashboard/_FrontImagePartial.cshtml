<div id="frontImages" style="display:none">
    <div class="text-center">
        <h1 class="display-4">Orders</h1>
    </div>
    <div class="divOnTableLayout">
        <table class="table" border="1">
            <thead>
                <tr class="table-succes">
                    <th>Id</th>
                    <th>Name</th>
                    <th>File path</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(image, index) in frontImages">
                    <td>{{image.id}}</td>
                    <td>{{image.name}}</td>
                    <td>{{image.filePath}}</td>
                    <td class="Remove">
                        <button class="btn btn-danger" >Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="form-group">
        <button v-on:click="openAddModal" class="btn btn-success">Add Image</button>
    </div>

    <div id="addImageModal" class="modal fade" tabindex="-1" role="dialog"aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <h2 style="text-align:center">Add Type</h2>
                <h6 class="necessaryInfo"></h6>
                <div class="form-group">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Name</label>
                            <input class="form-control" placeholder="Name of the type" v-model="type.name" class="form-control">
                        </div>                       
                    </div>
                    <div class="form-group col-md-6">
                                      <label class="control-label">Choose image</label>
                                      <input type="file" class="productFile" ref="file" v-on:change="uploadImage()"/>
                                      <span class="text-danger"></span>
                                   </div>
                    <div class="form-group">
                        <button v-on:click="addImage" class="btn btn-success"> Add Image</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>