<div id="types" style="display:none">
    <div class="text-center">
        <h1 class="display-4">Types</h1>
    </div>
    <div class="divOnTableLayout" style="overflow-x:auto;">
        <table class="table table-striped table-bordered table-sm" cellspacing="0">
            <thead>
                <tr class="table-succes">
                    <th>Id</th>
                    <th>Name</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(type, index) in types">
                    <td>{{type.id}}</td>
                    <td>{{type.name}}</td>
                    <td>
                        <button class="btn btn-primary" v-on:click="openEditModal(type)">Edit</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="form-group">
        <button v-on:click="openAddModal" class="btn customGreen">Add Type</button>
    </div>

    <div id="addTypeModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <h2 style="text-align:center">Add Type</h2>
                <h6 class="necessaryInfo"></h6>
                <div class="form-group">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Name</label>
                            <input class="form-control" placeholder="Name of the type" v-model="type.name" class="form-control">
                        </div>                       
                    </div>
                    <div class="form-group">
                        <button v-on:click="addType" class="btn customGreen"> Add Type</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="editTypeModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog " role="document">
            <div class="modal-content">
                                <h2 style="text-align:center">Edit Type</h2>
                <div class="divOnTableLayout">
                    <table class="table" border="1">
                        <thead>
                        <tr class="table-succes">
                            <th>Id</th>
                            <th>Name</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr class="table-succes">
                            <td id="typeId">{{type.id}}</td>
                            <td id="typeName" contenteditable="true">{{type.name}}</td>
                        </tr>
                        </tbody>
                    </table>
                    <button class="btn btn-primary" v-on:click="editType">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>